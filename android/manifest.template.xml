<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aichat"
    android:versionCode="1"
    android:versionName="1.0.0">

    <!-- Application permissions -->
    <!-- INTERNET: Required for API requests to OpenRouter service -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- ACCESS_NETWORK_STATE: Required for monitoring network connectivity status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- WRITE_EXTERNAL_STORAGE: Required for exporting chat history to files -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Application configuration -->
    <application
        android:label="AIChat"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!-- SDK version requirements -->
    <!-- Minimum SDK version: Android 5.0 (API level 21) -->
    <!-- Target SDK version will be set by Flet build process -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="33" />

</manifest>
